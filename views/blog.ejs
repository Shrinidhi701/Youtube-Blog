<!DOCTYPE html>
<html lang='en'>

<head>
    <%- include('./partials/head') %>
    <title>Add Blog</title>
</head>

<body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
        <form action="/blog/add" method="post" enctype="multipart/form-data">
            <div class="mt-3">
                <label for="CoverImage" class="form-label">Upload Your Blog Image</label>
                <input type="file" id="CoverImage" name="CoverImage" class="form-control" />
            </div>
            <div class="mt-3">
                <label for="Title" class="form-label">Title</label>
                <input type="text" id="Title" name="Title" class="form-control" />
            </div>
            <div class="mt-3">
                <label for="Body" class="form-label">Body</label>
                <textarea type="text" id="Body" name="Body" class="form-control"></textarea>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
    <%- include('./partials/scripts') %>
</body>

</html>